
<script type="text/javascript">
  function openNav() {
  document.getElementById("myNav").style.width = "100%";
}

/* Close when someone clicks on the "x" symbol inside the overlay */
function closeNav() {
  document.getElementById("myNav").style.width = "0%";
}
</script>
<div id="myNav" class="overlay">
<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

<div class="overlay-content">
<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <%= f.file_field :image, value: "Choose a file", direct_upload: true %>
    <div class="overlaytextarea">
        <%= f.text_area :caption, placeholder: "Caption/Describe your post here..." %>
    </div>
  <%= f.submit "Post", class: "button button1" %>
<% end %>
</div>
</div>
<span onclick="openNav()"><i class="gg-add-r"></i></span>
