<ul class="suggestions">
  <div class="row">
    <div class="column4">
        Suggestions For You
    </div>

    <div class="column5">
        <%= link_to "See all", users_path, class: 'link-to-text-color' %>
    </div>
  </div>

</ul>
<ul class="suggested-users">
  <% following = Array.new %>
  <% not_following = Array.new %>
  <% @users.each do |user| %>
    <% if current_user.following?(user) %>
      <% following << user %>
    <% else %>
      <% not_following << user %>
    <% end %>
  <% end %>
  <% arr = not_following.sample(5)%>
  <% arr.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user, class: 'link-to-text-color' %>
      <%= link_to "See Profile", user, class: 'link-to-text-color',style: "float: right" %>
      <span><%= pluralize(user.microposts.count, "Post") %>
      </span>
    </li>
  <% end %>
</ul>
