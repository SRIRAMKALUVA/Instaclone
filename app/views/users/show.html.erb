<% provide(:title, @user.name) %>
<div class="row">
  <div class="column1">  <%= gravatar_for @user %></div>
  <div class="column2">
    <ul>
    <div class="displayname"><%= @user.name %></div>
    </ul>
    <ul><%= render 'shared/stats' %></ul>
    <ul><%= render 'follow_form' if signed_in? %></ul>
  </div>
</div>

<div class="row">
<div class="span8">

  <% if @user.microposts.any? %>
    <h3>Posts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
</div>
