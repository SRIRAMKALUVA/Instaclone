<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      <section>
        <%= render 'shared/suggested_users' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Posts Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Instaclone App</h1>

    <h2>
      This is the home page for the
      <a href="http://instagram.com/">Instagram</a>'s clone called
      Instaclone application.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("logo.png", alt: "Rails", style: "display: block; margin-left: auto; margin-right: auto; width:100px; height:100px"), 'http://instagram.com/' %>
<% end %>
